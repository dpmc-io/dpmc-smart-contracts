{
  "name": "dpmc-smart-contracts",
  "version": "1.0.0",
  "description": "DPMC Defistation Smart Contracts",
  "main": "index.js",
  "scripts": {
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "lint": "npm run lint:sol && npm run lint:js",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:js": "eslint . --ext .js",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "typecheck": "npm run lint && npm run compile",
    "coverage": "hardhat coverage --solcoverjs ./.solcover.js || hardhat coverage",
    "slither": "bash static-analysis/run-slither.sh",
    "deploy:arbOne": "hardhat run scripts/deploy.js --network arbitrumOne",
    "deploy:arbSepolia": "hardhat run scripts/deploy.js --network arbitrumSepolia",
    "deploy:local": "hardhat run scripts/deploy.js",
    "deploy:sequence:arbOne": "hardhat run scripts/deploy-sequence.js --network arbitrumOne",
    "deploy:sequence:arbSepolia": "hardhat run scripts/deploy-sequence.js --network arbitrumSepolia",
    "verify:arbOne": "hardhat verify --network arbitrumOne",
    "verify:arbSepolia": "hardhat verify --network arbitrumSepolia",
    "verify:sequence:arbOne": "hardhat run scripts/verify-sequence.js --network arbitrumOne",
    "verify:sequence:arbSepolia": "hardhat run scripts/verify-sequence.js --network arbitrumSepolia",
    "verify:sequence": "hardhat run scripts/verify-sequence.js",
    "validate:env:arbOne": "node scripts/validate-env.js arbitrumOne",
    "validate:env:arbSepolia": "node scripts/validate-env.js arbitrumSepolia",
    "test": "hardhat test",
    "test:gas": "hardhat test gas-analysis/*.gas.spec.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "hardhat": "^2.28.2",
    "hardhat-gas-reporter": "^2.3.0",
    "prettier": "^3.3.3",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^3.6.2",
    "solidity-coverage": "^0.8.17"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2022": true,
      "mocha": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2022
    },
    "ignorePatterns": [
      "node_modules/",
      "artifacts/",
      "cache/"
    ]
  }
}
